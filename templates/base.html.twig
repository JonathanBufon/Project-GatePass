<!doctype html>
<html lang="pt-br" class="h-100">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% block title %}GatePass{% endblock %}</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
  <link rel="stylesheet" href="{{ asset('assets/css/app.css') }}">
</head>
<body class="d-flex flex-column h-100 {% block body_class %}{% endblock %}">
  {% block header %}
  <header>
    {% include '_partials/navbar.html.twig' %}
  </header>
  {% endblock %}

  {% block main_content_wrapper %}
  <main class="flex-shrink-0 py-4">
    <div class="container">
      <div class="toast-container">
        {% include '_partials/flash_messages.html.twig' %}
      </div>
      {% block main_content %}{% endblock %}
    </div>
  </main>
  {% endblock %}

  {% block footer %}
  {% include '_partials/footer.html.twig' %}
  {% endblock %}

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  <script src="{{ asset('assets/js/app.js') }}"></script>
  {% block javascripts %}{% endblock %}
</body>
</html>
