{% extends 'base.html.twig' %}
{% block title %}Recuperar Senha - GatePass{% endblock %}
{% block main_content %}
<div class="d-flex min-vh-100 align-items-center justify-content-center py-5">
  <div class="card shadow-sm border-0 rounded-4" style="max-width:420px; width:100%">
    <div class="card-body p-4 p-md-5">
      <div class="text-center mb-4">
        <h1 class="h4 mb-0">Recuperar Senha</h1>
        <p class="text-muted mb-0">Informe seu e-mail de acesso</p>
      </div>
      {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_row(form.email) }}
        <button class="w-100 btn btn-primary btn-lg mt-2" type="submit">Enviar link</button>
      {{ form_end(form) }}
      <div class="text-center mt-3">
        <a href="{{ path('app_login') }}" class="small">Voltar ao login</a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
