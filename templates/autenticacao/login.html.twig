{% extends 'base.html.twig' %}
{% block title %}Login - GatePass{% endblock %}
{% block body_class %}bg-auth-gradient{% endblock %}
{% block header %}{% endblock %}
{% block footer %}{% endblock %}
{% block main_content %}
<div class="d-flex min-vh-100 align-items-center justify-content-center py-5">
  <div class="card shadow-sm border-0 rounded-4" style="max-width:420px; width:100%">
    <div class="card-body p-4 p-md-5">
      <div class="text-center mb-4">
        <img src="{{ asset('assets/img/logo-gatepass.svg') }}" alt="GatePass" width="64" height="64" class="mb-2">
        <h1 class="h4 mb-0">Acessar sua conta</h1>
        <p class="text-muted mb-0">Bem-vindo ao GatePass</p>
      </div>
      {% include '_partials/flash_messages.html.twig' %}
      <form method="post" action="{{ path('app_login') }}" novalidate>
        {% if error %}
          <div class="alert alert-danger mb-3" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="form-floating mb-3">
          <input type="email" name="_username" id="inputEmail" class="form-control" value="{{ last_username }}" placeholder="Email" required autocomplete="email" autofocus>
          <label for="inputEmail">Email</label>
        </div>
        <div class="form-floating mb-2">
          <input type="password" name="_password" id="inputPassword" class="form-control" placeholder="Senha" required autocomplete="current-password">
          <label for="inputPassword">Senha</label>
        </div>
        <div class="d-flex justify-content-between align-items-center mb-3">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="rememberMe" name="_remember_me" checked>
            <label class="form-check-label" for="rememberMe">Lembrar-me</label>
          </div>
          <a class="small text-decoration-none" href="#" data-bs-toggle="tooltip" title="Entre em contato com o suporte para recuperar sua senha.">Esqueci minha senha</a>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="w-100 btn btn-primary btn-lg" type="submit">Entrar</button>
        <div class="text-center mt-3">
          <span class="text-muted small">NÃ£o tem uma conta?</span>
          <a href="{{ path('app_registro') }}" class="small">Registrar</a>
        </div>
      </form>
    </div>
  </div>
</div>
{% endblock %}
