{% extends 'autenticacao/base_auth.html.twig' %}

{% block title %}Seja um Vendedor - GatePass{% endblock %}

{% block auth_form %}
    {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}

    <h1 class="h4 mb-4 fw-semibold text-center">Criar conta de Vendedor</h1>

    <div class="form-floating mb-2">
        {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Email de Acesso', 'class': 'form-control'}}) }}
        {{ form_label(registrationForm.email) }}
        {{ form_errors(registrationForm.email) }}
    </div>

    <div class="form-floating mb-2">
        {{ form_widget(registrationForm.nomeFantasia, {'attr': {'placeholder': 'Nome Fantasia da Empresa', 'class': 'form-control'}}) }}
        {{ form_label(registrationForm.nomeFantasia) }}
        {{ form_errors(registrationForm.nomeFantasia) }}
    </div>

    <div class="form-floating mb-2">
        {{ form_widget(registrationForm.cnpj, {'attr': {'placeholder': 'CNPJ', 'class': 'form-control'}}) }}
        {{ form_label(registrationForm.cnpj) }}
        {{ form_errors(registrationForm.cnpj) }}
    </div>

    <div class="form-floating mb-2">
        {{ form_widget(registrationForm.plainPassword.first, {'attr': {'placeholder': 'Senha', 'class': 'form-control'}}) }}
        {{ form_label(registrationForm.plainPassword.first) }}
        {{ form_errors(registrationForm.plainPassword.first) }}
    </div>
    <div class="form-floating mb-3">
        {{ form_widget(registrationForm.plainPassword.second, {'attr': {'placeholder': 'Confirmar Senha', 'class': 'form-control'}}) }}
        {{ form_label(registrationForm.plainPassword.second) }}
        {{ form_errors(registrationForm.plainPassword.second) }}
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="form-check text-start">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
            {{ form_label(registrationForm.agreeTerms, 'Li e aceito os termos de uso', {'label_attr': {'class': 'form-check-label small'}}) }}
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>
        <a class="small text-decoration-none" href="{{ path('app_login') }}">Já tenho conta</a>
    </div>

    <button class="w-100 btn btn-primary btn-lg" type="submit">Registrar Vendedor</button>

    <div class="text-center mt-3">
        <a href="{{ path('app_home') }}" class="small text-decoration-none">Voltar à página inicial</a>
    </div>

    {{ form_end(registrationForm) }}
{% endblock %}