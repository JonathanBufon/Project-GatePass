{# templates/vendedor/dashboard/index.html.twig #}
{% extends 'vendedor/base.html.twig' %}

{% block content %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Dashboard</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a href="{{ path('app_vendedor_evento_novo') }}" class="btn btn-sm btn-success">
                <i class="bi bi-plus-circle me-1"></i>
                Novo Evento
            </a>
        </div>
    </div>

    <h2 class="h4">Meus Eventos Cadastrados</h2>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Data</th>
                <th scope="col">Local</th>
                <th scope="col">Status</th>
                <th scope="col">Ações</th>
            </tr>
            </thead>
            <tbody>
            {% for evento in eventos %}
                <tr>
                    <td>{{ evento.id }}</td>
                    <td>{{ evento.nome }}</td>
                    <td>{{ evento.dataHoraInicio|date('d/m/Y H:i') }}</td>
                    <td>{{ evento.local }}</td>
                    <td>
                        {% if evento.status == 'PUBLICADO' %}
                            <span class="badge bg-success">Publicado</span>
                        {% elseif evento.status == 'RASCUNHO' %}
                            <span class="badge bg-warning">Rascunho</span>
                        {% else %}
                            <span class="badge bg-danger">{{ evento.status|capitalize }}</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_vendedor_evento_editar', {'id': evento.id}) }}" class="btn btn-sm btn-primary">Editar</a>
                        {# ... outros botões ... #}
                        {% if evento.status == 'RASCUNHO' %}
                            <form method="post" action="{{ path('app_vendedor_evento_publicar', {'id': evento.id}) }}" class="d-inline" onsubmit="return confirm('Tem certeza que deseja publicar este evento?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('publicar' ~ evento.id) }}">
                                <button type="submit" class="btn btn-sm btn-success">Publicar</button>
                            </form>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">
                        Nenhum evento cadastrado.
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}