{% extends 'base.html.twig' %}

{% block title %}Dashboard Vendedor - GatePass{% endblock %}

{# 1. Adicionamos o CSS específico do Dashboard #}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/vendedor/dashboard.css') }}" rel="stylesheet">
    {# (Bootstrap Icons, se necessário) #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
{% endblock %}

{# 2. O Dashboard TEM um Header (Navbar), então o mantemos #}
{% block header %}
    {{ parent() }} {# (Renderiza a navbar preta do base.html.twig) #}
{% endblock %}

{# 3. O Dashboard NÃO TEM o footer padrão #}
{% block footer %}{% endblock %}

{# 4. O Dashboard SOBRESCREVE o layout principal #}
{% block main_content_wrapper %}
    <div class="container-fluid">
        <div class="row">

            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3 sidebar-sticky">
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted text-uppercase">
                        <span>Gerenciamento</span>
                    </h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('app_vendedor_dashboard') }}">
                                <i class="bi bi-speedometer2 me-2"></i>
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            {# (Futuro) Rota para o CRUD de Eventos #}
                            <a class="nav-link" href="#">
                                <i class="bi bi-calendar-event me-2"></i>
                                Meus Eventos
                            </a>
                        </li>
                        <li class="nav-item">
                            {# (Futuro) Rota para Vendas #}
                            <a class="nav-link" href="#">
                                <i class="bi bi-ticket-perforated me-2"></i>
                                Vendas
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                {# Padding para a Navbar fixa (já definido no base.html.twig) #}
                <div style="padding-top: 60px;">

                    {# Inclui as flash messages #}
                    {% include '_partials/flash_messages.html.twig' %}

                    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                        <h1 class="h2">Dashboard</h1>
                        <div class="btn-toolbar mb-2 mb-md-0">
                            {# (Futuro) Botão para Criar Evento #}
                            <a href="#" class="btn btn-sm btn-success">
                                <i class="bi bi-plus-circle me-1"></i>
                                Novo Evento
                            </a>
                        </div>
                    </div>

                    <h2 class="h4">Meus Eventos Cadastrados</h2>
                    <div class="table-responsive">
                        <table class="table table-striped table-sm">
                            <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Nome</th>
                                <th scope="col">Data</th>
                                <th scope="col">Local</th>
                                <th scope="col">Status</th>
                                <th scope="col">Ações</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for evento in eventos %}
                                <tr>
                                    <td>{{ evento.id }}</td>
                                    <td>{{ evento.nome }}</td>
                                    <td>{{ evento.dataHoraInicio|date('d/m/Y H:i') }}</td>
                                    <td>{{ evento.local }}</td>
                                    <td>
                                        {# Regra de View (Ex: Badge colorido) #}
                                        {% if evento.status == 'PUBLICADO' %}
                                            <span class="badge bg-success">Publicado</span>
                                        {% elseif evento.status == 'RASCUNHO' %}
                                            <span class="badge bg-warning">Rascunho</span>
                                        {% else %}
                                            <span class="badge bg-danger">{{ evento.status|capitalize }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {# (Futuro) Links de Ação #}
                                        <a href="#" class="btn btn-sm btn-primary">Editar</a>
                                        <a href="#" class="btn btn-sm btn-info">Ver Lotes</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="text-center">
                                        Nenhum evento cadastrado.
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>
        </div>
    </div>
{% endblock %}