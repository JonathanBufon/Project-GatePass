{# templates/vendedor/base.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Dashboard Vendedor - GatePass{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/vendedor/dashboard.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
{% endblock %}

{% block header %}
    {# O header (navbar) é herdado do 'base.html.twig' #}
    {{ parent() }}
{% endblock %}

{% block footer %}{% endblock %} {# Remove o footer público #}

{% block main_content_wrapper %}
    <div class="container-fluid">
        <div class="row">

            {# --- Bloco 1: A Sidebar Fixa --- #}
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3 sidebar-sticky">
                    <h6 class="sidebar-heading d-flex justify-content-between align-items.center px-3 mt-4 mb-1 text-muted text-uppercase">
                        <span>Gerenciamento</span>
                    </h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            {# Usamos app.request.attributes.get('_route') para o "active" #}
                            <a class="nav-link {% if app.request.attributes.get('_route') == 'app_vendedor_dashboard' %}active{% endif %}"
                               aria-current="page"
                               href="{{ path('app_vendedor_dashboard') }}">
                                <i class="bi bi-speedometer2 me-2"></i>
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            {# Link de exemplo #}
                            <a class="nav-link" href="#">
                                <i class="bi bi-ticket-perforated me-2"></i>
                                Vendas
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            {# --- Bloco 2: O Conteúdo Principal --- #}
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                {# Usamos a classe 'main-content' que corrigimos no CSS anterior #}
                <div class="main-content">

                    {% include '_partials/flash_messages.html.twig' %}

                    {# Este é o bloco que os templates filhos (dashboard, novo, editar) irão preencher #}
                    {% block content %}{% endblock %}

                </div>
            </main>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# Carrega os ícones (Feather) se forem usados, ou remove se usar apenas Bootstrap Icons #}
    <script src="https://cdn.jsdelivr.net/npm/feather-icons@4.28.0/dist/feather.min.js" integrity="sha384-uO3SXW5IuS1ZpFPKugNNWqTZRRglnUJK6UAZ/gxOX80nxEkN9NcGZTftn6RzhGWE" crossorigin="anonymous"></script>
    <script>
        feather.replace({ 'aria-hidden': 'true' });
    </script>
{% endblock %}