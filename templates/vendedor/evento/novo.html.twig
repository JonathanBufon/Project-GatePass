{% extends 'base.html.twig' %}
{% block title %}Novo Evento - GatePass{% endblock %}
{% block main_content %}
<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h4 mb-0">{{ page_title|default('Criar Novo Evento') }}</h1>
  {% if evento is defined %}
    <a href="{{ path('app_vendedor_lote_novo', {evento: evento.id}) }}" class="btn btn-primary">Adicionar Lote</a>
  {% endif %}
</div>
<div class="card"><div class="card-body">
  {{ form_start(eventoForm) }}
    {{ form_widget(eventoForm) }}
    <button class="btn btn-primary mt-3" type="submit">Salvar</button>
  {{ form_end(eventoForm) }}
</div></div>
{% endblock %}
