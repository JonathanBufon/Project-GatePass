{# templates/vendedor/evento/novo.html.twig #}
{% extends 'vendedor/base.html.twig' %}

{% block title %}{{ page_title|default('Novo Evento') }} - Dashboard{% endblock %}

{# Informamos ao Symfony para usar os blocos customizados deste arquivo #}
{% form_theme eventoForm.lotes _self %}

{# Este é o "molde" (prototype) para cada Lote #}
{% block _evento_lotes_entry_widget %}
    <div class="list-group-item lote-item">
        <div class="row g-2 align-items-center">
            <div class="col-md-3">{{ form_row(form.nome) }}</div>
            <div class="col-md-2">{{ form_row(form.preco) }}</div>
            <div class="col-md-2">{{ form_row(form.quantidadeTotal) }}</div>
            <div class="col-md-2">{{ form_row(form.dataInicioVendas) }}</div>
            <div class="col-md-2">{{ form_row(form.dataFimVendas) }}</div>
            <div class="col-md-1">
                <button type="button" class="btn btn-sm btn-danger remove-lote-button">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        </div>
    </div>
{% endblock %}


{% block content %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">{{ page_title|default('Novo Evento') }}</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a href="{{ path('app_vendedor_dashboard') }}" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>
                Cancelar
            </a>
        </div>
    </div>

    {{ form_start(eventoForm) }}

    <div class="card mb-4">
        <div class="card-header">
            Detalhes do Evento
        </div>
        <div class="card-body">
            {# ... (campos do formulário eventoForm) ... #}
            <div class="row">
                <div class="col-md-8">
                    {{ form_row(eventoForm.nome) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(eventoForm.local) }}
                </div>
            </div>

            <div class="row g-3">
                <div class="col-md-4">
                    {{ form_row(eventoForm.dataHoraInicio) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(eventoForm.dataHoraFim) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(eventoForm.capacidadeTotal) }}
                </div>
            </div>

            <div class="mt-3">
                {{ form_row(eventoForm.descricao) }}
            </div>

            <div class="mt-3">
                {{ form_row(eventoForm.urlBanner) }}
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            {{ form_label(eventoForm.lotes) }}
            <button type="button" class="btn btn-sm btn-success add-lote-button"
                    data-collection-holder-id="lotes-collection-wrapper">
                <i class="bi bi-plus-circle me-1"></i> Adicionar Lote
            </button>
        </div>
        <div class="card-body">
            <div id="lotes-collection-wrapper"
                 class="list-group"
                 data-index="{{ eventoForm.lotes|length > 0 ? eventoForm.lotes|last.vars.name + 1 : 0 }}"
                 data-prototype="{{ form_widget(eventoForm.lotes.vars.prototype)|e('html_attr') }}">

                {# Renderiza os lotes existentes usando o "molde" #}
                {% for loteForm in eventoForm.lotes %}
                    {{ form_widget(loteForm) }}
                {% endfor %}
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-4">
        <i class="bi bi-save me-1"></i>
        Salvar Alterações
    </button>

    {# --- CORREÇÃO 2: Fechar o formulário --- #}
    {{ form_end(eventoForm) }}

{% endblock %}


{% block javascripts %}
    {# 1. Carrega os scripts do 'vendedor/base.html.twig' (que carrega os do 'base.html.twig') #}
    {{ parent() }}

    {# 2. Carrega nosso script de coleção dedicado #}
    <script src="{{ asset('assets/js/vendedor/form_collection.js') }}"></script>
{% endblock %}