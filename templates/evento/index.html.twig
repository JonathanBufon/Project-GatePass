{% extends 'base.html.twig' %}
{% block title %}Eventos - GatePass{% endblock %}
{% block main_content %}
<section class="text-center section-hero">
  <h1 class="display-6">Eventos</h1>
  <p class="text-muted">Confira os próximos eventos</p>
</section>
<div class="container mb-4">
  <form method="get" action="{{ path('app_evento_index') }}" class="row g-2">
    <div class="col-12 col-md-4">
      <input type="text" name="q" value="{{ filtros.q|default('') }}" class="form-control" placeholder="Buscar por nome">
    </div>
    <div class="col-12 col-md-3">
      <input type="text" name="local" value="{{ filtros.local|default('') }}" class="form-control" placeholder="Local">
    </div>
    <div class="col-6 col-md-2">
      <input type="date" name="dataInicio" value="{{ filtros.dataInicio|default('') }}" class="form-control" placeholder="De">
    </div>
    <div class="col-6 col-md-2">
      <input type="date" name="dataFim" value="{{ filtros.dataFim|default('') }}" class="form-control" placeholder="Até">
    </div>
    <div class="col-12 col-md-1 d-grid">
      <button class="btn btn-primary" type="submit">Filtrar</button>
    </div>
  </form>
  {% if filtros.q or filtros.local or filtros.dataInicio or filtros.dataFim %}
    <div class="small text-muted mt-2">Aplicando filtros.</div>
  {% endif %}
</div>
<div class="album py-5 bg-light">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      {% for evento in eventos %}
      <div class="col">
        <div class="card shadow-sm h-100">
          <img src="{{ evento.urlBanner|default('https://via.placeholder.com/800x400?text=GatePass') }}" class="card-img-top" alt="{{ evento.nome }}">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">{{ evento.nome }}</h5>
            <p class="card-text">{{ evento.local }} • {{ evento.dataHoraInicio|date('d/m/Y H:i') }}</p>
            <div class="mt-auto d-flex justify-content-between align-items-center">
              <a href="{{ path('app_evento_detalhe', {id: evento.id}) }}" class="btn btn-outline-primary btn-sm">Ver detalhes</a>
              <small class="text-muted">{{ (evento.status ? evento.status.value : '')|lower|capitalize }}</small>
            </div>
          </div>
        </div>
      </div>
      {% else %}
      <div class="col-12"><div class="text-center text-muted">Nenhum evento publicado.</div></div>
      {% endfor %}
    </div>
  </div>
</div>
{% endblock %}
