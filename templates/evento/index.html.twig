{% extends 'base.html.twig' %}

{% block title %}Pr√≥ximos Eventos - GatePass{% endblock %}

{% block main_content %}

    <section class="py-5 text-center">
    </section>

    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

                {% for evento in eventos %}
                    <div class="col">
                        <div class="card shadow-sm">

                            <img src="{{ evento.urlBanner|default('https://via.placeholder.com/400x250?text=GatePass') }}"
                                 class="bd-placeholder-img card-img-top"
                                 width="100%" height="225"
                                 alt="{{ evento.nome }}">

                            <div class="card-body">
                                <h5 class="card-title">{{ evento.nome }}</h5>
                                <p class="card-text">
                                    <strong>Data:</strong> {{ evento.dataHoraInicio|date('d/m/Y H:i') }}<br>
                                    <strong>Local:</strong> {{ evento.local }}
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">

                                        <a href="{{ path('app_evento_detalhe', {id: evento.id}) }}"
                                           class="btn btn-sm btn-outline-secondary">
                                            Ver Detalhes
                                        </a>
                                    </div>
                                    <small class="text-muted">{{ evento.status|capitalize }}</small>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12">
                        <p class="text-center text-muted fs-4">
                            Nenhum evento publicado no momento.
                        </p>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>

{% endblock %}