{% extends 'base.html.twig' %}

{% block title %}{{ evento.nome }} - GatePass{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# (Bootstrap Icons, se necessário) #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
{% endblock %}

{# O template Product/Detalhe não tem o footer padrão #}
{% block footer %}{% endblock %}


{% block main_content_wrapper %}
    <div class="container">

        <main>
            <div class="row g-5">
                <div class="col-md-6">
                    {# Coluna da Imagem (Banner) #}
                    <img src="{{ evento.urlBanner|default(asset('assets/img/placeholder_banner.jpg')) }}" class="img-fluid rounded shadow-sm" alt="{{ evento.nome }}">
                </div>

                <div class="col-md-6">
                    {# Coluna de Informações #}
                    <h1 class="fw-bold display-6">{{ evento.nome }}</h1>

                    <ul class="list-unstyled text-muted fs-5 mt-3">
                        <li class="mb-2">
                            <i class="bi bi-calendar-event me-2" style="color: var(--bs-primary);"></i>
                            {{ evento.dataHoraInicio|date('d/m/Y \à\s H:i') }}
                        </li>
                        <li>
                            <i class="bi bi-geo-alt-fill me-2" style="color: var(--bs-primary);"></i>
                            {{ evento.local }}
                        </li>
                    </ul>

                    <p classs="lead mt-3">{{ evento.descricao|default('Descrição não informada.')|nl2br }}</p>

                    <hr class="my-4">

                    <h3 class="h4 mb-3">Ingressos</h3>

                    {#
                    TAREFA 2: Loop nos Lotes.
                    Cada Lote é um formulário POST para 'app_carrinho_add'.
                    #}
                    <div class="list-group">
                        {% for lote in evento.lotes %}
                            {#
                            Regra de View: (Opcional)
                            Só mostrar lotes com vendas ativas (se as datas estiverem definidas)
                            #}
                            {# {% if (lote.dataInicioVendas is null or lote.dataInicioVendas <= "now") and
                                (lote.dataFimVendas is null or lote.dataFimVendas >= "now") %} #}

                            <form method="POST" action="{{ path('app_carrinho_add', {'id': lote.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('add-lote-' ~ lote.id) }}">

                                <input type="hidden" name="evento_id" value="{{ evento.id }}">

                                <div class="list-group-item list-group-item-action d-flex gap-3 py-3 shadow-sm mb-2 rounded">
                                    <div class="d-flex gap-2 w-100 justify-content-between">
                                        <div>
                                            <h5 class="mb-0">{{ lote.nome }}</h5>
                                            <p class="mb-1 opacity-75">
                                                R$ <strong class="fs-5">{{ lote.preco|number_format(2, ',', '.') }}</strong>
                                            </p>
                                            {% if lote.dataInicioVendas or lote.dataFimVendas %}
                                                <small class="text-muted">
                                                    Disponível
                                                    {% if lote.dataInicioVendas %}de {{ lote.dataInicioVendas|date('d/m') }}{% endif %}
                                                    {% if lote.dataFimVendas %} até {{ lote.dataFimVendas|date('d/m') }}{% endif %}
                                                </small>
                                            {% endif %}
                                        </div>

                                        <div class="d-flex align-items-center" style="max-width: 200px;">
                                            <label for="quantidade-{{ lote.id }}" class="visually-hidden">Quantidade</label>
                                            <input type="number"
                                                   id="quantidade-{{ lote.id }}"
                                                   name="quantidade"
                                                   class="form-control form-control-sm me-2"
                                                   value="1"
                                                   min="1"
                                                   max="10"> {# (Opcional) Limite de 10 por compra #}

                                            <button type="submit" class="btn btn-primary btn-sm text-nowrap">
                                                <i class="bi bi-cart-plus me-1"></i> Comprar
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            {# {% endif %} #}
                        {% else %}
                            <div class="list-group-item">
                                <p class="mb-0 text-muted">Nenhum lote de ingresso disponível para este evento no momento.</p>
                            </div>
                        {% endfor %}
                    </div>

                </div>
            </div>
        </main>

    </div>
{% endblock %}