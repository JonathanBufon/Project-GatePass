{# templates/vendedor/evento/novo.html.twig #}

{# 1. Estende o layout base do Dashboard do Vendedor #}
{% extends 'vendedor/base.html.twig' %}

{# Define o título da página (usado no <title> do base) #}
{# Usamos a variável page_title; 'Novo Evento' é um fallback. #}
{% block title %}{{ page_title|default('Novo Evento') }} - Dashboard{% endblock %}

{# 2. Substitui o bloco de conteúdo principal do Dashboard #}
{% block content %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        {# TAREFA 3: O H1 agora usa a variável dinâmica 'page_title' #}
        <h1 class="h2">{{ page_title|default('Novo Evento') }}</h1>

        <div class="btn-toolbar mb-2 mb-md-0">
            {# O botão "Cancelar" leva de volta ao Dashboard #}
            <a href="{{ path('app_vendedor_dashboard') }}" class="btn btn-sm btn-outline-secondary">
                <span data-feather="arrow-left" class="align-text-bottom"></span>
                Cancelar
            </a>
        </div>
    </div>

    {# Usamos um card do Bootstrap para encapsular o formulário #}
    <div class="card">
        <div class="card-body">

            {# 3. Inicia a renderização do formulário (DTO) #}
            {{ form_start(eventoForm) }}

            <div class="row">
                <div class="col-md-8">
                    {{ form_row(eventoForm.nome) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(eventoForm.local) }}
                </div>
            </div>

            <div class="row g-3">
                <div class="col-md-4">
                    {{ form_row(eventoForm.dataHoraInicio) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(eventoForm.dataHoraFim) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(eventoForm.capacidadeTotal) }}
                </div>
            </div>

            <div class="mt-3">
                {{ form_row(eventoForm.descricao) }}
            </div>

            <div class="mt-3">
                {{ form_row(eventoForm.urlBanner) }}
            </div>

            <button type="submit" class="btn btn-primary mt-4">
                <span data-feather="save" class="align-text-bottom"></span>
                Salvar Alterações
            </button>

            {{ form_end(eventoForm) }}

        </div>
    </div>
{% endblock %}