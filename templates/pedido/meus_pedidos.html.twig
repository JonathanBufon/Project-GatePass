{% extends 'base.html.twig' %}
{% block title %}Meus Pedidos - GatePass{% endblock %}
{% block main_content %}
<h1 class="h4 mb-4">Meus Pedidos</h1>
{% if pedidos is not empty %}
  <div class="list-group">
    {% for p in pedidos %}
      <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" href="{{ path('app_pedido_detalhe', {id: p.id}) }}">
        <span>#{{ p.id }} • {{ p.dataCriacao|date('d/m/Y H:i') }}</span>
        <span class="badge bg-secondary">{{ p.status }}</span>
      </a>
    {% endfor %}
  </div>
{% else %}
  <div class="text-muted">Você ainda não fez pedidos.</div>
{% endif %}
{% endblock %}
