{% extends 'base.html.twig' %}

{% block title %}Meus Pedidos - GatePass{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
{% endblock %}

{# A página de listagem de pedidos não tem o footer padrão #}
{% block footer %}{% endblock %}

{% block main_content_wrapper %}
    <div class="container" style="padding-top: 80px;">
        <main>
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Meus Pedidos</h1>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                            <tr>
                                <th scope="col">Pedido (ID)</th>
                                <th scope="col">Data da Compra</th>
                                <th scope="col">Total</th>
                                <th scope="col">Status</th>
                                <th scope="col">Ações</th>
                            </tr>
                            </thead>
                            <tbody>
                            {# 1. Itera sobre os pedidos vindos do PedidoService #}
                            {% for pedido in pedidos %}
                                <tr>
                                    <th scope="row">#{{ pedido.id }}</th>
                                    <td>{{ pedido.dataCriacao|date('d/m/Y H:i') }}</td>
                                    <td>R$ {{ pedido.total|number_format(2, ',', '.') }}</td>
                                    <td>
                                        {# Regra de View (Ex: Badge colorido) #}
                                        {% if pedido.status == 'PAGO' %}
                                            <span class="badge bg-success">Pago</span>
                                        {% elseif pedido.status == 'PENDENTE' %}
                                            <span class="badge bg-warning text-dark">Pendente (Carrinho)</span>
                                        {% elseif pedido.status == 'CANCELADO' %}
                                            <span class="badge bg-danger">Cancelado</span>
                                        {% else %}
                                            <span class="badge bg-secondary">{{ pedido.status|capitalize }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {# 2. Link para a rota de detalhe (Tarefa 1) #}
                                        <a href="{{ path('app_pedido_detalhe', {'id': pedido.id}) }}" class="btn btn-sm btn-primary">
                                            <i class="bi bi-eye-fill me-1"></i> Ver Detalhes
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center py-4">
                                        <p class="mb-0">Você ainda não realizou nenhum pedido.</p>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
{% endblock %}