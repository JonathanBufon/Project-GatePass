{% extends 'base.html.twig' %}
{% block title %}Checkout - GatePass{% endblock %}
{% block main_content %}
<h1 class="h4 mb-4">Checkout</h1>
{% if pedido is defined %}
  <div class="card mb-4"><div class="card-body">Resumo do pedido #{{ pedido.id }}</div></div>
{% endif %}
{% if checkoutForm is defined %}
  <div class="row g-4">
    <div class="col-md-7">
      <div class="card"><div class="card-body">{{ form_start(checkoutForm) }}
        {{ form_widget(checkoutForm) }}
        <button class="btn btn-primary mt-3">Continuar</button>
      {{ form_end(checkoutForm) }}</div></div>
    </div>
  </div>
{% endif %}
{% endblock %}
